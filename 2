// Example program
#include <stdio.h>
#include <time.h>

void move(char from, int n, char to)
{
    printf("move plate %d from %c to %c\n", n, from, to);
}

void hanoi(int n, char x, char y, char z)
{
    if (n == 1)    
    {
        move(x, 1, z);
    }
    else
    {
        hanoi(n-1, x, z, y);//n-1 move to y
        move(x, n, z);//move n to z
        hanoi(n-1, y, x, z);//n-1 move to x
    }
}

int main()
{
    time_t begin, end;
    printf("Enter the number of plates: ");
    int n;
    scanf("%d", &n);
    begin = clock();
    hanoi(n, 'x', 'y', 'z');
    end = clock();
    
    double spent = (double)(end-begin) / CLOCKS_PER_SEC;
    printf("\ndepth = %d, time = %.3f seconds\n", n, spent);
}
